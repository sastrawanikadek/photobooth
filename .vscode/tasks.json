{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Setup",
      "command": ". scripts/setup.sh",
      "type": "shell",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      },
      "group": "build"
    },
    {
      "label": "Start App",
      "command": [
        "[[ -d .venv ]] && ",
        "source .venv/bin/activate && ",
        "watchmedo auto-restart --pattern \"*.py\" --recursive --signal SIGTERM -- python3 -m server.main"
      ],
      "type": "shell",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      },
      "group": "build"
    }
  ]
}
